#                        border    background     text      indicator     child bdr
client.focused	         <color1>	  <foreground>	 <color8>   	<color1>	    <color1>
client.focused_inactive	 <foreground>	  <foreground> <color8>	    <foreground>	    <foreground>
client.unfocused	       <foreground>	<foreground>	 <color8>	    <foreground>	  <foreground>
client.urgent	           <alert>	   <foreground>	 <color8>	    <red>	      <red>
client.placeholder	     <color1>	   <foreground>	 <color8>	    <color1>	   <color1>

client.background	<color2>

# Gaps
gaps inner 10
gaps outer -4

smart_gaps on
new_window pixel 5
new_float normal

# hide_edge_borders none

floating_modifier $mod

# set power-manager and volume control
exec --no-startup-id mate-power-manager

focus_follows_mouse no
