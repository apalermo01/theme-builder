{
	"hypr": {
		"default_path": "./themes/hyprland_default/hyprland.conf"
	},

	"wallpaper": {
		"method": "hyprpaper",
		"name": "cat1.jpg"
	},

	"waybar": {
		"default_path": {
			"config": "./themes/hyprland_default/waybar/config",
			"css": "./themes/hyprland_default/waybar/style.css"
		}
	},

	"nvim": {
        "colorscheme": "dracula",
        "lualine": {
            "component_separators": "✓",
            "left_sep": "",
            "right_sep": "",
            "sections": {
                "lualine_a": "{'mode'}",
                "lualine_b": "{'branch', 'diff', 'diagnostics'}",
                "lualine_c": "{'filename'}",
                "lualine_x": "{'encoding', 'fileformat', 'filetype'}",
                "lualine_z": "{'location'}"
  	}, 
  
	"alacritty": {
	  "default_path": "./themes/hyprland_default/alacritty.toml"
	},

	"fish": {
		"neofetch": ""
	},

	"tmux": {
	  "default_path": "./themes/hyprland_default/tmux.conf"
	}
}
